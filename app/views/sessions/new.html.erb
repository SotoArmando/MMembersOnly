


<div class="container">
  <h1>Sign in</h1>

  <div>
    <% if logged_in? %>
      <h3><span>You are logged in as</span> <%= current_user.name %></h3>
      <%= link_to 'logout', sign_out_path, method: :delete, class: 'button' %>
    <%end %>
  </div>
  <%= form_for( :sessions, url: sign_in_path) do |f| %>

      <p><%= f.label :email %></p>
      <p><%= f.text_field :email %></p>

      <p><%= f.label :password %></p>
      <p><%= f.password_field :password %></p>
     <%= f.submit 'Submit', class:'button' %>


<%end  %>
  <br/>
  <%= link_to 'All posts', posts_path , class: 'button-logout' %>
</div>

