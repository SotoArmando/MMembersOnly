


<div class="container">
  <h1>Sign in :)</h1>

  <div>
    <% if logged_in? %>
      <h3><span>You are logged in as</span> <%= current_user.name %></h3>
      <%= link_to 'logout', sign_out_path, method: :delete, class: 'button' %>
    <%end %>
  </div>
  <%= form_for( :sessions, url: sign_in_path) do |f| %>

      <p><%= f.label :email %></p>
      <p><%= f.text_field :email %></p>
      <%= link_to 'No an User? Click here and Sign up', posts_path , class: '' %>
      <p><%= f.label :password %></p>
      <p><%= f.password_field :password %></p>
      <%= link_to 'Forgot your Password? Click here and Get it back!', posts_path , class: 'upbuttonstitle' %>
     <br>
     <%= f.submit 'Sign in', class:'button' %>
     <%= link_to 'See All our posts! :)', posts_path , class: 'button' %>


<%end  %>
  <br/>
  
</div>

