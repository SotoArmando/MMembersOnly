<h1> Create a New Post</h1>


<%= form_for(@post) do |f| %>
  <p><%= f.label :title %>   </p>
  <p><%= f.text_field :title, class: 'form-control' %> </p>

 <p> <%= f.label :body %>  </p>
 <p><%= f.text_area   :body, class: 'form-control' %> </p>

 <p> <%= f.submit 'submit', class: "button"  %>  </p>
<% end %>